<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background"
    >

    <!-- AppBar dengan Header -->
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/primary"
        app:titleTextColor="@color/on_primary"
        app:title="Tambah Invoice"
        app:navigationIcon="@drawable/ic_arrow_back"
        android:elevation="4dp"/>

    <!-- ScrollView Content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:paddingBottom="24dp">

            <!-- Informasi Usaha -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="@color/secondary_container">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="ðŸ“‹ Informasi Usaha"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/on_secondary_container"
                        android:layout_marginBottom="16dp"/>

                    <!-- Logo Container -->
                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_gravity="center"
                        app:cardCornerRadius="8dp"
                        app:cardElevation="2dp"
                        app:strokeWidth="1dp"
                        app:strokeColor="#E0E0E0"
                        android:layout_marginBottom="12dp">

                        <ImageView
                            android:id="@+id/imgLogo"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="centerCrop"
                            android:src="@drawable/ic_image_placeholder"
                            android:contentDescription="Logo usaha"/>

                    </com.google.android.material.card.MaterialCardView>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnPilihLogo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Pilih Logo"
                        android:layout_gravity="center"
                        android:layout_marginBottom="16dp"
                        android:backgroundTint="@color/primary"
                        android:textColor="@color/on_primary"
                        app:cornerRadius="20dp" />

                    <TextView
                        android:id="@+id/textView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Nama Usaha"
                        android:textColor="@color/text_secondary" />

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp"
                        android:hint="Nama Usaha"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        app:boxStrokeColor="@color/primary"
                        app:hintTextColor="@color/primary">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etNamaUsaha"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="text"
                            android:textColor="#000000"
                            android:textColorHint="#BF360C"/>
                    </com.google.android.material.textfield.TextInputLayout>

                    <TextView
                        android:id="@+id/textView2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Alamat Usaha"
                        android:textColor="@color/text_secondary"
                        android:textSize="14sp"
                        android:layout_marginBottom="4dp" />

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp"
                        android:hint="Alamat Usaha"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        app:boxStrokeColor="@color/primary"
                        app:hintTextColor="@color/text_hint">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etAlamatUsaha"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="textMultiLine"
                            android:minLines="2"
                            android:maxLines="3"
                            android:gravity="top"
                            android:textColor="@color/text_primary"
                            android:textColorHint="@color/text_hint" />
                    </com.google.android.material.textfield.TextInputLayout>


                    <TextView
                        android:id="@+id/textView4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="No Telepon"
                        android:textColor="@color/text_secondary"
                        android:textSize="14sp"
                        android:layout_marginBottom="4dp" />

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="No Telepon Usaha"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        app:boxStrokeColor="@color/primary"
                        app:hintTextColor="@color/text_hint">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etTelpUsaha"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="phone"
                            android:textColor="@color/text_primary"
                            android:textColorHint="@color/text_hint" />
                    </com.google.android.material.textfield.TextInputLayout>


                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Informasi Pelanggan -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="@color/secondary_container">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <!-- Title -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="ðŸ‘¤ Informasi Pelanggan"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/on_secondary_container"
                        android:layout_marginBottom="16dp" />

                    <!-- Nama Pelanggan -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Nama Pelanggan"
                        android:textColor="@color/text_secondary"
                        android:textSize="14sp"
                        android:layout_marginBottom="4dp" />

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp"
                        android:hint="Nama Pelanggan"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        app:boxStrokeColor="@color/outline"
                        app:boxStrokeWidthFocused="2dp"
                        app:hintTextColor="@color/text_hint">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etNama"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="textPersonName"
                            android:textColor="@color/text_primary"
                            android:textColorHint="@color/text_hint" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- No Telepon -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="No Telepon"
                        android:textColor="@color/text_secondary"
                        android:textSize="14sp"
                        android:layout_marginBottom="4dp" />

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp"
                        android:hint="No Telepon Pelanggan"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        app:boxStrokeColor="@color/outline"
                        app:boxStrokeWidthFocused="2dp"
                        app:hintTextColor="@color/text_hint">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etNoTelepon"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="phone"
                            android:textColor="@color/text_primary"
                            android:textColorHint="@color/text_hint" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Alamat -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Alamat"
                        android:textColor="@color/text_secondary"
                        android:textSize="14sp"
                        android:layout_marginBottom="4dp" />

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Alamat Pelanggan"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        app:boxStrokeColor="@color/outline"
                        app:boxStrokeWidthFocused="2dp"
                        app:hintTextColor="@color/text_hint">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etAlamat"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="textMultiLine"
                            android:minLines="2"
                            android:maxLines="3"
                            android:gravity="top"
                            android:textColor="@color/text_primary"
                            android:textColorHint="@color/text_hint" />
                    </com.google.android.material.textfield.TextInputLayout>

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>


            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="@color/secondary_container"
                app:cardForegroundColor="@android:color/transparent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <!-- Title -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="ðŸ§¾ Informasi Invoice"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/on_secondary_container"
                        android:layout_marginBottom="16dp" />

                    <!-- No Invoice -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="No Invoice"
                        android:textSize="14sp"
                        android:textColor="@color/text_secondary"
                        android:layout_marginBottom="4dp" />

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp"
                        android:hint="No Invoice"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        app:prefixText="INV-"
                        app:boxStrokeColor="@color/outline"
                        app:boxStrokeWidthFocused="2dp"
                        app:hintTextColor="@color/text_hint">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etNoInvoice"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="text"
                            android:textColor="@color/text_primary"
                            android:textColorHint="@color/text_hint" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Tanggal -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Tanggal"
                        android:textSize="14sp"
                        android:textColor="@color/text_secondary"
                        android:layout_marginBottom="4dp" />

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp"
                        android:hint="Tanggal"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        app:boxStrokeColor="@color/outline"
                        app:boxStrokeWidthFocused="2dp"
                        app:hintTextColor="@color/text_hint">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etTanggal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:focusable="false"
                            android:clickable="true"
                            android:inputType="none"
                            android:textColor="@color/text_primary"
                            android:textColorHint="@color/text_hint" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Metode Pembayaran -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Metode Pembayaran"
                        android:textSize="14sp"
                        android:textColor="@color/text_secondary"
                        android:layout_marginBottom="4dp" />

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Metode Pembayaran"
                        android:importantForAccessibility="yes"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                        app:boxStrokeColor="@color/outline"
                        app:boxStrokeWidthFocused="2dp"
                        app:hintTextColor="@color/text_hint">

                        <com.google.android.material.textfield.MaterialAutoCompleteTextView
                            android:id="@+id/etPembayaran"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/text_primary"
                            android:textColorHint="@color/text_hint"
                            android:contentDescription="Metode Pembayaran" />
                    </com.google.android.material.textfield.TextInputLayout>



                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>


            <!-- Detail Barang -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="@color/secondary_container"
                app:cardForegroundColor="@android:color/transparent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="ðŸ›’ Detail Barang"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/on_secondary_container"
                        android:layout_marginBottom="16dp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Nama Barang"
                        android:textSize="14sp"
                        android:textColor="@color/text_secondary"
                        android:layout_marginBottom="4dp"/>

                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp"
                        android:hint="Nama Barang"
                        app:boxStrokeColor="@color/outline"
                        app:hintTextColor="@color/text_hint">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etNamaBarang"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/text_primary"
                            android:textColorHint="@color/text_hint"/>
                    </com.google.android.material.textfield.TextInputLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="4dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Jumlah"
                            android:textSize="14sp"
                            android:textColor="@color/text_secondary"/>

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Harga"
                            android:textSize="14sp"
                            android:textColor="@color/text_secondary"/>

                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="12dp"
                        android:baselineAligned="false">

                        <com.google.android.material.textfield.TextInputLayout

                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginEnd="8dp"
                            android:hint="Jumlah"
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                            app:boxStrokeColor="@color/primary"
                            app:hintTextColor="@color/primary">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/etQty"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:inputType="number"
                                android:textColor="#000000"
                                android:textColorHint="#0D47A1"/>
                        </com.google.android.material.textfield.TextInputLayout>

                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:hint="Harga Satuan"
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                            app:prefixText="Rp "
                            app:boxStrokeColor="@color/primary"
                            app:hintTextColor="@color/primary">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/etHargaSatuan"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:inputType="numberDecimal"
                                android:textColor="#000000"
                                android:textColorHint="#0D47A1"/>
                        </com.google.android.material.textfield.TextInputLayout>

                    </LinearLayout>

                    <TextView
                        android:id="@+id/textView16"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Diskon"
                        android:textColor="#0D47A1"/>

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        android:hint="Diskon"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        app:suffixText="%"
                        app:boxStrokeColor="@color/primary"
                        app:hintTextColor="@color/primary">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etDiskon"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="numberDecimal"
                            android:text="0"
                            android:textColor="#000000"
                            android:textColorHint="#0D47A1"/>

                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnTambahBarang"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Tambah Barang"
                        android:textColor="@color/on_primary"
                        android:backgroundTint="@color/primary"
                        style="@style/Widget.MaterialComponents.Button"/>

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Daftar Barang -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardDaftarBarang"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:visibility="gone"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="@color/tertiary_container">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="ðŸ“ Daftar Barang"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/on_tertiary_container"
                        android:layout_marginBottom="12dp"/>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rvBarang"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- RINGKASAN PEMBAYARAN -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardRingkasan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="24dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="8dp"
                app:cardBackgroundColor="@color/surface">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <!-- Title -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="ðŸ’° Ringkasan Pembayaran"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/text_primary"
                        android:layout_marginBottom="16dp"/>

                    <!-- Subtotal -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="8dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Sub Total"
                            android:textSize="14sp"
                            android:textColor="@color/text_secondary"/>

                        <TextView
                            android:id="@+id/tvSubTotal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Rp 0"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:textColor="@color/text_primary"/>
                    </LinearLayout>

                    <!-- Diskon -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="12dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Diskon"
                            android:textSize="14sp"
                            android:textColor="@color/error"/>

                        <TextView
                            android:id="@+id/tvDiskonTotal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="- Rp 0"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:textColor="@color/error"/>
                    </LinearLayout>

                    <!-- Input Pajak -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp"
                        android:hint="Pajak"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        app:suffixText="%">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etPajak"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="numberDecimal"
                            android:text="0"
                            android:textColor="@color/text_primary"/>
                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Total Pajak -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="12dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Total Pajak"
                            android:textSize="14sp"
                            android:textColor="@color/text_secondary"/>

                        <TextView
                            android:id="@+id/tvPajak"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Rp 0"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:textColor="@color/text_primary"/>
                    </LinearLayout>

                    <!-- Biaya Pengiriman -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp"
                        android:hint="Biaya Pengiriman"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        app:prefixText="Rp ">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etBiayaPengiriman"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="numberDecimal"
                            android:text="0"
                            android:textColor="@color/text_primary"/>
                    </com.google.android.material.textfield.TextInputLayout>


                    <!-- Divider -->
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/outline"
                        android:layout_marginBottom="12dp"/>

                    <!-- TOTAL BAYAR -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="12dp"
                        android:background="@color/primary_container">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="TOTAL BAYAR"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="@color/on_primary_container"/>

                        <TextView
                            android:id="@+id/tvTotal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Rp 0"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:textColor="@color/on_primary_container"/>
                    </LinearLayout>

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>


            <!-- Tombol Simpan -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnSimpan"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="Simpan Invoice"
                android:textSize="18sp"
                android:backgroundTint="@color/primary"
                android:textColor="@color/on_primary"/>


        </LinearLayout>

    </ScrollView>

    <View
        android:id="@+id/loadingOverlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#80000000"
        android:visibility="gone"
        android:elevation="10dp" />

    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_centerInParent="true"
        android:visibility="gone"/>


</LinearLayout>