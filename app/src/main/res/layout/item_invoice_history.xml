<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="16dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/selectableItemBackground">

    <!-- Nomor Invoice -->
    <TextView
        android:id="@+id/tvNoInvoice"
        android:textStyle="bold"
        android:text="INV-20260108-001"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:textColor="#000000"
        android:textSize="16sp"/>

    <!-- Nama Customer -->
    <TextView
        android:id="@+id/tvNamaCustomer"
        android:text="Nama Customer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvNoInvoice"
        android:layout_alignParentStart="true"
        android:layout_marginTop="2dp"
        android:textColor="#555555"
        android:textSize="14sp"/>

    <!-- Total Invoice -->
    <TextView
        android:id="@+id/tvTotal"
        android:text="Rp 0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvNamaCustomer"
        android:layout_alignParentStart="true"
        android:layout_marginTop="4dp"
        android:textColor="#4CAF50"
        android:textStyle="bold"
        android:textSize="14sp"/>

    <!-- Tombol Delete di kanan -->
    <ImageButton
        android:id="@+id/btnDeleteItem"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:src="@android:drawable/ic_menu_delete"
        android:contentDescription="Hapus Invoice"
        app:tint="#F44336"
        android:padding="8dp"/>

</RelativeLayout>
